<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hfad.com.attendancemanager">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FeatureListActivity"
            android:label="@string/title_activity_feature_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ProvideClassActivity"
            android:label="@string/title_activity_provide_class"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ClassDetail"
            android:label="@string/title_activity_class_detail"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ViewAttendanceActivity"
            android:label="@string/title_activity_view_attendance"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SelectMonthActivity"
            android:label="@string/title_activity_select_month"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".RegistrationActivity"
            android:label="@string/title_activity_registration"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".TakeAttendanceActivity"
            android:label="@string/title_activity_take_attendance"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".StudentDetails"
            android:label="@string/title_activity_student_details" />
        <activity
            android:name=".TotalAttendanceList"
            android:label="@string/title_activity_total_attendance_list"></activity>
    </application>

</manifest>
